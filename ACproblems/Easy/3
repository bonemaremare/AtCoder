N,A,B=map(int,input().split())
S=str(input())

num_a=0
num_b=0
for i in range(N):
    if S[i]=="a":
        if num_a+num_b<A+B:
            num_a+=1
            print("Yes")
        else:
            print("No")
    
    elif S[i]=="b":
        if num_a+num_b<A+B and num_b<B :
            num_b+=1
            print("Yes")
        else:
            print("No")
    
    else:
        print("No")

